{
  "name": "deep-freeze",
  "version": "1.0.0",
  "description": "Recursively freeze objects to ensure immutability when testing redux reducers",
  "main": "index.js",
  "scripts": {
    "test": "jest --runTestsByPath",
    "test:watch": "jest --watch",
    "lint": "eslint ./ --ignore-path .gitignore",
    "prettier": "prettier \"./**/*.{js,json,md}\" --check",
    "test:all": "npm run prettier && npm run lint && npm t",
    "coverage": "npm t -- --coverage"
  },
  "keywords": [
    "immutability",
    "unit",
    "testing",
    "deep-freeze",
    "freeze",
    "redux"
  ],
  "author": "Danko Lučić",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ldgit/deep-freeze-2"
  },
  "devDependencies": {
    "@babel/core": "^7.5.5",
    "@babel/preset-env": "^7.5.5",
    "eslint": "^6.1.0",
    "eslint-config-airbnb-base": "^13.2.0",
    "eslint-config-prettier": "^6.0.0",
    "eslint-plugin-import": "^2.18.2",
    "jest": "^24.8.0",
    "prettier": "^1.18.2"
  },
  "dependencies": {},
  "prettier": {
    "arrowParens": "avoid",
    "bracketSpacing": true,
    "htmlWhitespaceSensitivity": "css",
    "insertPragma": false,
    "jsxBracketSameLine": false,
    "jsxSingleQuote": false,
    "printWidth": 80,
    "proseWrap": "preserve",
    "quoteProps": "as-needed",
    "requirePragma": false,
    "semi": true,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "all",
    "useTabs": false,
    "overrides": [
      {
        "files": "*.test.js",
        "options": {
          "printWidth": 100
        }
      }
    ]
  }
}
